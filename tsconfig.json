{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "lib": ["ES2022"],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "out",
    "strict": true,
    "moduleResolution": "Node16",
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
		"skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/test/**/*.ts"],
  "exclude": ["node_modules"]
}
